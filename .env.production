# =============================================================
# DaVinci AI - Production Environment Variables
# Copy this file to .env and fill in the values before deploying.
# =============================================================

# ---- PostgreSQL ----
POSTGRES_DB=davinciai
POSTGRES_USER=davinciai
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ---- Security ----
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=CHANGE_ME_GENERATE_A_STRONG_256_BIT_KEY

# ---- CORS ----
ALLOWED_ORIGINS=https://enterprise.davinciai.eu,https://demo.davinciai.eu

# ---- Stripe (optional - leave empty to disable) ----
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ---- Environment ----
ENVIRONMENT=production
DEBUG=false
